s --> person(C1, N1, P1), person(C2, N2, P2), person(C3, N3, P3),
        {C1 \== C2, C1 \== C3, C2 \== C3,
         N1 \== N2, N1 \== N3, N2 \== N3,
         P1 \== P2, P1 \== P3, P2 \== P3}.

person(C, N, P) --> col(C), nat(N), pet(P).

col('red')   --> [red].
col('blue')  --> [blue].
col('green') --> [green].

nat('english')  --> [english].
nat('spanish')  --> [spanish].
nat('japanese') --> [japanese].

pet('jaguar') --> [jaguar].
pet('snail')  --> [snail].
pet('zebra')  --> [zebra].
